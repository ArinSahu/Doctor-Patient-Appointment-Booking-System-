<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!--=============== REMIXICONS ===============-->
    <link
      href="https://cdn.jsdelivr.net/npm/remixicon@2.5.0/fonts/remixicon.css"
      rel="stylesheet"
    />

    <!--=============== CSS ===============-->
    <link rel="stylesheet" href="/style.css" />

    <title>Signup</title>
  </head>
  <body>
    <div class="login">
      <img src="/login-bg.png" alt="login image" class="login__img" />

      <form action="/signup" method="post" class="container">
        <h1 class="login__title">SignUp</h1>

        <div class="login__content">
          <div class="login__box">
            <i class="ri-user-3-line login__icon"></i>

            <div class="login__box-input">
              <input
                type="text"
                required
                class="login__input"
                id="login-name"
                name="username"
                placeholder=" "
              />
              <label for="login-name" class="login__label">Name</label>
            </div>
          </div>

          <div class="login__box">
            <i class="ri-lock-2-line login__icon"></i>

            <div class="login__box-input">
              <input
                type="password"
                required
                class="login__input"
                name="password"
                id="login-pass"
                placeholder=" "
              />
              <label for="login-pass" class="login__label">Password</label>
              <!-- <i class="ri-eye-off-line login__eye" id="login-eye"></i> -->
            </div>
          </div>
        </div>
        <% if (typeof message !== 'undefined') { %>
          <div class="alert alert-danger">
              <p><%= message %></p>
          </div>
      <% } %><br>
        

        <button type="submit" class="login__button">SignUp</button>

        <!-- <p class="login__register">Account already exists!</p> -->
      </form>
    </div>
  </body>
</html>
